#!/bin/sh

# Setup heroku application remotes
if heroku auth:whoami &> /dev/null; then
  if heroku apps:info --app pl-cv-generator-staging &> /dev/null; then
    git remote add staging git@heroku.com:pl-cv-generator-staging.git || true
    git config heroku.remote staging
    echo 'You are a collaborator on the "pl-cv-generator-staging" Heroku app'
  else
    echo 'Ask for access to the "pl-cv-generator-staging" Heroku app'
  fi

  if heroku apps:info --app pl-cv-generator-production &> /dev/null; then
    git remote add production git@heroku.com:pl-cv-generator-production.git || true
    echo 'You are a collaborator on the "pl-cv-generator-production" Heroku app'
  else
    echo 'Ask for access to the "pl-cv-generator-production" Heroku app'
  fi
else
  echo 'You need to login to heroku. Run "heroku login"'
fi
