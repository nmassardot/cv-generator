<h2
  class="mt-10 text-4xl text-center"
>
<%= t('sessions.log_in') %>
</h2>

<div
  class="content-center block w-1/2 px-20 py-24 mt-5 bg-blue-600 h-5/6"
>
  <div
    class="px-16 m-auto"
  >
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email, class: 'block mb-2 text-2xl'%>
    <%= f.email_field :email,
        autofocus: true,
        autocomplete: "email",
        class: 'w-64 mb-5 border border-black rounded-lg' %>

    <%= f.label :password, class: 'block mb-2 text-2xl' %>
    <%= f.password_field :password,
        autocomplete: "current-password",
        class: 'w-64 mb-3 border border-black rounded-lg' %>

    <% if devise_mapping.rememberable? %>
      <div class="mb-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('sessions.log_in'),
          class: 'w-64 py-1 mb-3 rounded-lg hover:bg-gray-300' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>